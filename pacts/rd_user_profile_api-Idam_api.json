{
    "provider": {
        "name": "Idam_api"
    },
    "consumer": {
        "name": "rd_user_profile_api"
    },
    "interactions": [
        {
            "description": "Provider returns user info to RD - USER PROFILE API",
            "request": {
                "method": "GET",
                "path": "/o/userinfo",
                "headers": {
                    "Authorization": "Bearer eyJ0eXAiOiJKV1QiLCJraWQiOiJiL082T3ZWdeRre"
                }
            },
            "response": {
                "status": 200,
                "headers": {
                    "Content-Type": "application/json"
                },
                "body": {
                    "uid": "1111-2222-3333-4567",
                    "roles": [
                        "prd-admin",
                        "IDAM_ADMIN_USER"
                    ],
                    "given_name": "puiCaseManager",
                    "family_name": "Jar"
                },
                "matchingRules": {
                    "body": {
                        "$.uid": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        },
                        "$.given_name": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        },
                        "$.family_name": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        },
                        "$.roles[0]": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        },
                        "$.roles[1]": {
                            "matchers": [
                                {
                                    "match": "type"
                                }
                            ],
                            "combine": "AND"
                        }
                    }
                }
            },
            "providerStates": [
                {
                    "name": "I have obtained an access_token as a user",
                    "params": {
                        "client_id": "pact",
                        "client_secret": "pactsecret",
                        "password": "Password123",
                        "redirect_uri": "http://www.dummy-pact-service.com/callback",
                        "scope": "openid profile roles",
                        "username": "prdadmin@email.net"
                    }
                }
            ]
        },
        {
            "description": "a POST /registration request from an RD - USER PROFILE API",
            "request": {
                "method": "POST",
